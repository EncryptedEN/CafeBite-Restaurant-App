<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cafebite.demo.HomeController" fillWidth="true">
    <Text text="Welcome To Cafe Bite." styleClass="title-text">
        <font>
            <Font name="Arial" size="30" />
        </font>
    </Text>
    <Button text="Customer" onAction="#handleCustomer" styleClass="menu-button" prefHeight="50" prefWidth="200">
        <font>
            <Font size="20" />
        </font>
    </Button>
    <Button text="Staff" onAction="#handleStaff" styleClass="menu-button" prefHeight="50" prefWidth="200">
        <font>
            <Font size="20" />
        </font>
    </Button>
</VBox>
