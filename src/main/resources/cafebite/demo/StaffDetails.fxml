<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="700.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="cafebite.demo.StaffDetailsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <ScrollPane fitToWidth="true" pannable="true">
        <content>
            <VBox fx:id="staffCardsContainer" spacing="15"/>
                <!-- Add Button here if it's supposed to be inside the scrollable area -->

        </content>
    </ScrollPane>
    <Button fx:id="addButton" text="Add New Staff" onAction="#addNewStaff" />
    <Button onAction="#handleBack" text="Back to Manager Dashboard" />
</VBox>
